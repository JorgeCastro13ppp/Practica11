<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negro"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnMostrarContactos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mostrar contactos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122"
        android:textColor="@color/blanco"
        android:background="@drawable/boton_estilo"/>

    <Button
        android:id="@+id/btnSeleccionarContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar contacto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.232"
        android:textColor="@color/blanco"
        android:background="@drawable/boton_estilo" />

    <Button
        android:id="@+id/btnNavegador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar el navegador"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327"
        android:textColor="@color/blanco"
        android:background="@drawable/boton_estilo" />

    <Button
        android:id="@+id/btnLlamarTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Llamar por teléfono"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.449"
        android:textColor="@color/blanco"
        android:background="@drawable/boton_estilo" />

    <Button
        android:id="@+id/btnMarcarTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marcar nº de teléfono"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.549"
        android:textColor="@color/blanco"
        android:background="@drawable/boton_estilo" />


</androidx.constraintlayout.widget.ConstraintLayout>